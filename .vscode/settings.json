{
  "npm.packageManager": "pnpm",
  "files.exclude": {
    ".editorconfig": true,
    ".idea": true,
    ".git": true,
    "**/.turbo": true,
    "pnpm-lock.yaml": true,
    "LICENSE": true,
    "**/*.js.map": {
      "when": "$(basename)"
    },
    "**/*.d.ts.map": {
      "when": "$(basename)"
    },
    "**/*.js": {
      "when": "$(basename).d.ts",
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "color-highlight.markerType": "underline",
  "lit-plugin.rules.no-invalid-css": "off"
}